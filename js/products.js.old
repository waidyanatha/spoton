    document.getElementById("submenudesc").innerHTML=submenudesc;
    document.getElementById("demo").innerHTML=demo;
//    document.getElementById("imgTitle").innerHTML=imgTitle;
    document.getElementById("imgURL").innerHTML=imgURL;
    document.getElementById("subProds").innerHTML=subProds;
};
